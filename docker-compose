version: '3'

services:
  thimothis-db:
    image: mysql:latest
    container_name: thimothis-db
    environment:
      MYSQL_ROOT_PASSWORD: your-db-root-password
      MYSQL_DATABASE: your-db-name
      MYSQL_USER: your-db-user
      MYSQL_PASSWORD: your-db-password
    ports:
      - "3306:3306"
    networks:
      - thimothis-network

  thimothis-redis:
    image: redis:latest
    container_name: thimothis-redis
    ports:
      - "6379:6379"
    networks:
      - thimothis-network

  thimothis-auth:
    image: your-auth-image:tag
    container_name: thimothis-auth
    environment:
      # Add your auth service environment variables here
    networks:
      - thimothis-network
    depends_on:
      - thimothis-db 
      - "80:80"
    networks:
      - thimothis-network

networks:
  thimothis-network:
